<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>My Pantry</h1>
    </div>
  </div>
  <hr>

  <div class='row'>
    <%= form_for @pantry_ingredient do |f| %>
      <div class='col-xs-6 col-md-4 text-center'>
        <h1><%= f.label :ingredient_id, 'Add An Ingredient' %>
        <%= f.collection_select :ingredient_id, Ingredient.order(:name), :id, :form_text, include_blank: true %></h1>
      </div>

      <div class='col-xs-6 col-md-4 text-center'>
        <h1><%= f.label :quantity %></h1>
        <%= f.text_field :quantity %><br>

        <%= f.submit 'Add To Pantry' , class: 'btn btn-primary recipe'%>
      </div>
    <% end %>
  </div>
  <hr>

  <div class='row'>
    <div class='col-md-12'>
      <% current_user.pantry.pantry_ingredients.each do |pi| %>
        <div class='col-xs-4 col-sm-2'>
          <div class='pantry-ingredient panel text-center'>
            <h3><%= pi.ingredient.name %></h3>
            <h4><%= pi.quantity %> <%= pi.ingredient.quantity_type %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

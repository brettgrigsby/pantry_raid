<div class="container">
  <div class="row">
<%= form_for [@recipe, @recipe_ingredient] do |f| %>
  <%= f.collection_select :ingredient_id, Ingredient.order(:name), :id, :form_text, include_blank: true %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.label :prep_method %>
  <%= f.text_field :prep_method %>

  <%= f.submit 'Add This Ingredient' %>
<% end %>

<%= link_to 'DONE ADDING INGREDIENTS', new_recipe_recipe_step_path(@recipe), class: 'btn btn-lg btn-default' %>
  </div>

  <hr>

  <div class="row">
    <% @recipe.recipe_ingredients.each do |ri| %>
      <div class="col-xs-6 col-sm-3">
        <div class="panel text-center">
          <h2><%= ri.ingredient.name %></h2>
          <h4><%= ri.quantity %> <%= ri.ingredient.quantity_type %></h4>
          <h4><%= ri.prep_method %></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

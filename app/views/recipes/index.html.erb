<div class="container">
  <div class="row text-center">
    <%= link_to 'CREATE A RECIPE', new_recipe_path, class: 'btn btn-lg btn-default' %>
  </div>

  <hr>

  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-sm-3 text-center">
        <div class="panel recipe-box">
          <h1><%= link_to recipe.name, recipe %></h1>
          <%= link_to 'ADD TO MENU', new_recipe_menu_recipe_path(recipe), class: 'btn btn-lg btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
